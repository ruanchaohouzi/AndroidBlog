<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>
        <variable name="dataInfo" type="com.ruanchao.mvvmdemo.bean.DataInfo"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:gravity="center"
    >

        <TextView
                android:id="@+id/tv_Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dataInfo.author}"
                android:textSize="13sp"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@{dataInfo.niceDate}"
                  android:layout_alignParentRight="true"
                  android:textSize="13sp"
        />

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="@{dataInfo.title}"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_below="@id/tv_Author"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:maxLines="2"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@{dataInfo.chapterName}"
                  android:layout_below="@id/tv_title"
                  android:textSize="13sp"
        />

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@mipmap/artical_collection"
                   android:layout_alignParentRight="true"
                   android:layout_below="@id/tv_title"
        />


    </RelativeLayout>

</layout>

